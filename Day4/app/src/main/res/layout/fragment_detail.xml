<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardBG"
    android:padding="20dp"
    tools:context=".view.DetailFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/cardTextColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardBG">

            <ImageView
                android:id="@+id/pokeImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@color/white"
                android:src="@color/cardTextColor"/>


            <TextView
                android:id="@+id/pokeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/cardTextColor"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/pokeImage"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="pokeTitle" />

            <TextView
                android:id="@+id/pokeDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/cardTextColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/pokeImage"
                app:layout_constraintTop_toBottomOf="@+id/pokeTitle"
                tools:text="pokeDetail" />

            <TextView
                android:id="@+id/pokeDetail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/cardTextColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/pokeImage"
                app:layout_constraintTop_toBottomOf="@+id/pokeDetail"
                tools:text="pokeDetail" />

            <TextView
                android:id="@+id/pokeDetail3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/cardTextColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/pokeImage"
                app:layout_constraintTop_toBottomOf="@+id/pokeDetail2"
                tools:text="pokeDetail" />
            <TextView
                android:id="@+id/pokeDetail4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/cardTextColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/pokeImage"
                app:layout_constraintTop_toBottomOf="@+id/pokeDetail3"
                tools:text="pokeDetail" />
            <TextView
                android:id="@+id/pokeDetail5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:textColor="@color/cardTextColor"
                android:textSize="14sp"
                app:layout_constraintStart_toEndOf="@+id/pokeImage"
                app:layout_constraintTop_toBottomOf="@+id/pokeDetail4"
                tools:text="pokeDetail" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>