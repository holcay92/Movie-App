<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:padding="20dp"
    tools:context=".view.DetailFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:outlineSpotShadowColor="@color/cardTextColor"
        app:cardCornerRadius="10dp"
        app:cardElevation="30dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="p">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/cardBG"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/pokeImage"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:src="@color/white"
                android:src="@color/cardTextColor"/>
            <LinearLayout
                android:id="@+id/ll1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pokeImage"
                android:gravity="start">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Name: "
                    android:textColor="@color/cardTextColor"
                  />

                <TextView
                    android:id="@+id/pokeTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/cardTextColor"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    tools:text="pokeTitle" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll1"
                android:gravity="start">

                <TextView
                    android:id="@+id/height"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Height: "
                    android:textColor="@color/cardTextColor"
                    />

                <TextView
                    android:id="@+id/pokeDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/cardTextColor"
                    android:textSize="14sp"
                    tools:text="pokeDetail" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll2"
                android:gravity="start">
                <TextView
                    android:id="@+id/weight"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Weight: "
                    android:textColor="@color/cardTextColor"
                    />

                <TextView
                    android:id="@+id/pokeDetail2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/cardTextColor"
                    android:textSize="14sp"

                    tools:text="pokeDetail" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll3"
                android:gravity="start">

                <TextView
                    android:id="@+id/moves"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Skill 1 : "
                    android:textColor="@color/cardTextColor"
                    />
                <TextView
                    android:id="@+id/pokeDetail3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/cardTextColor"
                    android:textSize="14sp"

                    tools:text="pokeDetail" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll4"
                android:gravity="start">

                <TextView
                    android:id="@+id/moves2"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Skill 2 : "
                    android:textColor="@color/cardTextColor"
                    />
                <TextView
                    android:id="@+id/pokeDetail4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/cardTextColor"
                    android:textSize="14sp"

                    tools:text="pokeDetail" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll5"
                android:gravity="start">

                <TextView
                    android:id="@+id/moves3"
                    android:layout_width="110dp"
                    android:layout_height="wrap_content"
                    android:text="Skill 3 : "
                    android:textColor="@color/cardTextColor"
                    />


                <TextView
                    android:id="@+id/pokeDetail5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/cardTextColor"
                    android:textSize="14sp"

                    tools:text="pokeDetail" />
            </LinearLayout>






        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>